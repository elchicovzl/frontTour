div(class="container-fluid")
	div(class="row")
		div(class="col-lg-12")
			h2(class="page-header vt-title") Floorplan

	div(class="col-lg-4 col-md-offset-4" data-ng-hide="isDataLoaded")
			br
			i(class="fa fa-spin fa-circle-o-notch fa-4x")

	div(class="row vt-box" style="min-height:400px;" ng-hide="notFp")
		div(class="col-lg-6 container-img")
			img(class="img-responsive", id="floorplan", data-ng-mousedown="getCordinate($event)", alt="Floorplan" style="border:1px solid;" loading-img typeImage="floorplan")
		
		div(class="col-lg-6" )
			div(class="panel panel-info" data-ng-show="camSelect")
				div(class="panel-heading")
					| Camera Link {{idLink}}
				div(class="panel-body")
					div(class="row")
						select(data-ng-model="pano" data-ng-options="pano.name for pano in panos | filter: {link:true} " class="form-control vt-step-select")
							option(value="") Select a link
						br
						div(class="row")
							div(class="col-lg-6")
								button(type="button" data-ng-click="saveLink(idLink)" class="btn btn-default") save
								&nbsp;
								button(type="button" data-ng-click="cancelLink()" class="btn btn-danger") cancel
								&nbsp;
								button(type="button" data-ng-click="deleteLink(idLink)" class="btn btn-default") delete

			div(class="panel panel-info" data-ng-show="editCamSelect")
				div(class="panel-heading")
					| Camera Link {{dataEdit.idLink}}
				div(class="panel-body")
					div(class="row")
						p Pano id: {{dataEdit.pano}}
						p Pano name: {{dataEdit.panoName}}
						br
						div(class="row")
							div(class="col-lg-4")
								button(type="button" data-ng-click="removeLink(idLink)" class="btn btn-default") remove
								&nbsp;
								button(type="button" data-ng-click="cancelLink()" class="btn btn-danger") cancel
	div(class="row vt-box" style="min-height:400px;" ng-show="notFp")
		p Not Floorplan created.
	br
	div(class="row")
		div(class="col-lg-4")
			label Choose visibility of floorplan
			br 
			label(class="radio-inline")
				input(type="radio" name="statusFp" id="statusOn" data-ng-model="status" value="1")
				| Active
			label(class="radio-inline")
				input(type="radio" name="statusFp" id="statusOf" data-ng-model="status" value="0")
				| Inactive
	br
	br
	div(class="row")
		div(class="col-lg-4")
			button(type="button" data-ng-click="create(idLink)" class="btn btn-default")
				| Create 
				i(class="fa fa-cog fa-spin", ng-show="isLoading")
			&nbsp;
			button(type="button" data-ng-click="cancelLink()" class="btn btn-danger") cancel
					



